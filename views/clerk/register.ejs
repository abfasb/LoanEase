      document.getElementById('print-payment-end-year').textContent = endDate.getFullYear().toString().substr(-2);
      
      document.getElementById('print-paid-amount').textContent = "P1,000.00";
      document.getElementById('print-paid-shares').textContent = "One Thousand Pesos";
      document.getElementById('print-paid-shares-number').textContent = "10";
      
      document.getElementById('print-signing-day').textContent = today.getDate();
      document.getElementById('print-signing-month').textContent = getMonthName(today.getMonth());
      document.getElementById('print-signing-year').textContent = today.getFullYear().toString().substr(-2);
    }
    
    function createCharacterBoxes(containerId, text, maxBoxes) {
      const container = document.getElementById(containerId);
      container.innerHTML = '';
      
      for (let i = 0; i < maxBoxes; i++) {
        const box = document.createElement('div');
        box.className = 'id-form-box';
        if (i < text.length) {
          box.textContent = text[i].toUpperCase();
        }
        container.appendChild(box);
      }
    }
    
    function createDateBoxes(containerId, dateString) {
      const container = document.getElementById(containerId);
      container.innerHTML = '';
      
      for (let i = 0; i < dateString.length; i++) {
        const box = document.createElement('div');
        box.className = 'id-form-box';
        box.textContent = dateString[i];
        container.appendChild(box);
        
        // Add separator after MM and DD
        if (i === 1 || i === 3) {
          const separator = document.createElement('div');
          separator.textContent = '-';
          separator.className = 'id-form-date-separator';
          container.appendChild(separator);
        }
      }
    }
    
    function getMonthName(monthIndex) {
      const months = [
        'January', 'February', 'March', 'April', 'May', 'June',
        'July', 'August', 'September', 'October', 'November', 'December'
      ];
      return months[monthIndex];
    }
  });
