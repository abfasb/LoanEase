            font-size: 1.5rem;
            font-weight: 600;
            margin-bottom: 0.25rem;
        }
        .stat-label {
            font-size: 0.75rem;
            color: var(--text-secondary);
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }
        .stat-pending { color: var(--pending); }
        .stat-approved { color: var(--success); }
        .stat-failed { color: var(--danger); }
