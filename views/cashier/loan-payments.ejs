                        <th>Member Name</th>
                        <th>Loan Type</th>
                        <th>Payment Method</th>
                        <th>Amount</th>
                        <th>Payment Type</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="paymentsTableBody">
                    <% if (payments && payments.length > 0) { %>
                        <% payments.forEach(payment => { %>
                            <tr data-status="<%= payment.status.toLowerCase() %>">
                                <td class="payment-id"><%= payment.payment_id %></td>
                                <td class="cb-number"><%= payment.cb_number %></td>
                                <td><%= payment.loan_id %></td>
                                <td><%= payment.member_name %></td>
                                <td><%= payment.loan_type %></td>
                                <td><%= payment.payment_method %></td>
                                <td class="amount"><%= formatCurrency(payment.amount_paid) %></td>
                                <td><%= payment.payment_type %></td>
                                <td><span class="status-badge status-<%= payment.status.toLowerCase() %>"><%= payment.status %></span></td>
                                <td>
                                    <div class="action-buttons">
                                        <button class="action-btn" title="View Details" onclick="viewPaymentDetails('<%= payment.payment_id %>')">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                        <% if (payment.status === 'Pending') { %>
                                            <button class="action-btn approve" title="Approve" onclick="approvePayment('<%= payment.payment_id %>')">
                                                <i class="fas fa-check"></i>
                                            </button>
                                            <button class="action-btn reject" title="Reject" onclick="rejectPayment('<%= payment.payment_id %>')">
                                                <i class="fas fa-times"></i>
                                            </button>
                                        <% } %>
                                    </div>
                                </td>
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="10">
                                <div class="empty-state">
                                    <i class="fas fa-inbox"></i>
                                    <h3>No payments found</h3>
                                    <p>No loan payments have been submitted for approval.</p>
                                </div>
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>

        <!-- Payment Details Modal -->
        <div class="modal" id="paymentDetailsModal">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 class="modal-title">Payment Details</h2>
                    <button class="close-modal" onclick="closeModal('paymentDetailsModal')">&times;</button>
                </div>
                <div class="payment-details-section">
                    <div class="payment-details-title">PAYMENT INFORMATION</div>
                    <div id="paymentDetailsContainer">
                        <p>Payment details will be displayed here.</p>
                    </div>
                    <div class="approval-actions" id="approvalActions" style="display: none;">
                        <button class="approve-btn" onclick="confirmApproval()">
                            <i class="fas fa-check"></i>
                            Approve Payment
                        </button>
                        <button class="reject-btn" onclick="showRejectForm()">
                            <i class="fas fa-times"></i>
                            Reject Payment
                        </button>
                    </div>
                    <div id="rejectForm" style="display: none;">
                        <h4 style="margin-bottom: 10px; color: var(--danger);">Reason for Rejection:</h4>
                        <textarea class="rejection-reason" placeholder="Please provide a reason for rejection..."></textarea>
                        <div style="display: flex; gap: 10px; justify-content: center; margin-top: 15px;">
                            <button class="reject-btn" onclick="confirmRejection()">
                                <i class="fas fa-times"></i>
                                Confirm Rejection
                            </button>
                            <button class="approve-btn" onclick="hideRejectForm()" style="background-color: var(--text-secondary);">
                                Cancel
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        let currentPaymentId = null;

        // Initialize page
        document.addEventListener('DOMContentLoaded', function() {
            updateStatistics();
            
            // Filter tab functionality
            document.querySelectorAll('.filter-tab').forEach(tab => {
                tab.addEventListener('click', function() {
                    document.querySelectorAll('.filter-tab').forEach(t => t.classList.remove('active'));
                    this.classList.add('active');
                    
                    const status = this.dataset.status;
                    filterPayments(status);
                });
            });
        });

        function updateStatistics() {
            const rows = document.querySelectorAll('#paymentsTableBody tr');
            let pending = 0, approved = 0, rejected = 0;
            
            rows.forEach(row => {
                const status = row.dataset.status;
                if (status === 'pending') pending++;
                else if (status === 'completed') approved++;
                else if (status === 'failed') rejected++;
            });
            
            document.getElementById('pendingCount').textContent = pending;
            document.getElementById('approvedCount').textContent = approved;
            document.getElementById('rejectedCount').textContent = rejected;
        }

        function filterPayments(status) {
            const rows = document.querySelectorAll('#paymentsTableBody tr');
            rows.forEach(row => {
                if (status === 'all' || row.dataset.status === status) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        }

        async function viewPaymentDetails(paymentId) {
            currentPaymentId = paymentId;
            const modal = document.getElementById('paymentDetailsModal');
            const container = document.getElementById('paymentDetailsContainer');
            const approvalActions = document.getElementById('approvalActions');
            const rejectForm = document.getElementById('rejectForm');
            
            // Hide reject form
            rejectForm.style.display = 'none';
            
            try {
                const response = await fetch('/cashier/get-payments');
                const data = await response.json();
                
                if (!data.success) {
                    throw new Error(data.message || 'Failed to fetch payment data');
                }

                const paymentData = data.payments.find(p => p.payment_id == paymentId);
                if (!paymentData) {
                    throw new Error('Payment not found');
                }

                // Create table for payment details
                const table = document.createElement('table');
                table.className = 'payment-details-table';
                const tbody = document.createElement('tbody');
                
                const details = [
                    { label: 'Payment ID', value: paymentData.payment_id },
                    { label: 'CB Number', value: paymentData.cb_number },
                    { label: 'Loan ID', value: paymentData.loan_id },
                    { label: 'Member Name', value: paymentData.member_name },
                    { label: 'Loan Type', value: paymentData.loan_type },
                    { label: 'Payment Method', value: paymentData.payment_method },
                    { label: 'Amount Paid', value: '₱' + parseFloat(paymentData.amount_paid).toLocaleString('en-US', { minimumFractionDigits: 2 }) },
                    { label: 'Payment Type', value: paymentData.payment_type },
                    { label: 'Reference Number', value: paymentData.reference_number },
                    { label: 'Payment Sequence', value: paymentData.payment_sequence },
                    { label: 'Status', value: paymentData.status },
                    { label: 'Submitted Date', value: new Date(paymentData.created_at).toLocaleString() }
                ];
                
                // Add method-specific details
                if (paymentData.payment_method === 'GCash') {
                    details.push(
                        { label: 'GCash Reference', value: paymentData.gcash_reference || 'N/A' },
                        { label: 'GCash Full Name', value: paymentData.gcash_fullname || 'N/A' }
                    );
                } else if (paymentData.payment_method === 'ATM') {
                    details.push(
                        { label: 'ATM Card (Last 4)', value: paymentData.atm_card_last4 || 'N/A' },
                        { label: 'Bank Name', value: paymentData.atm_bank || 'N/A' },
                        { label: 'ATM Full Name', value: paymentData.atm_fullname || 'N/A' },
                        { label: 'Next Deduction Date', value: paymentData.next_deduction_date || 'N/A' }
                    );
                } else if (paymentData.payment_method === 'Over the Counter') {
                    details.push(
                        { label: 'OTC Full Name', value: paymentData.otc_fullname || 'N/A' },
                        { label: 'Scheduled Payment Date', value: paymentData.otc_payment_date || 'N/A' },
                        { label: 'Scheduled Time', value: paymentData.otc_payment_time || 'N/A' },
                        { label: 'OTC Payment Method', value: paymentData.otc_payment_method || 'N/A' },
                        { label: 'Check Number', value: paymentData.otc_check_number || 'N/A' }
                    );
                }

                details.forEach(detail => {
                    const row = document.createElement('tr');
                    const labelCell = document.createElement('th');
                    labelCell.textContent = detail.label;
                    const valueCell = document.createElement('td');
                    valueCell.textContent = detail.value;
                    row.appendChild(labelCell);
                    row.appendChild(valueCell);
                    tbody.appendChild(row);
                });

                table.appendChild(tbody);
                container.innerHTML = '';
                container.appendChild(table);

                // Show approval actions only for pending payments
                if (paymentData.status === 'Pending') {
                    approvalActions.style.display = 'flex';
                } else {
                    approvalActions.style.display = 'none';
                }

                // Show modal
                modal.style.display = 'flex';
            } catch (error) {
                alert('Error fetching payment details: ' + error.message);
                console.error('View Payment Details error:', error);
            }
        }

        async function approvePayment(paymentId) {
            currentPaymentId = paymentId;
            viewPaymentDetails(paymentId);
        }

        async function rejectPayment(paymentId) {
            currentPaymentId = paymentId;
            viewPaymentDetails(paymentId);
            setTimeout(() => {
                showRejectForm();
            }, 500);
        }

        async function confirmApproval() {
            if (!currentPaymentId) return;

            if (confirm('Are you sure you want to approve this payment?')) {
                try {
                    const response = await fetch('/cashier/approve-payment', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({
                            paymentId: currentPaymentId,
                            action: 'approve'
                        })
                    });
                    const data = await response.json();
                    
                    if (data.success) {
                        alert('Payment approved successfully!');
                        updatePaymentStatus(currentPaymentId, 'completed');
                        closeModal('paymentDetailsModal');
                        updateStatistics();
                        refreshPayments();
                    } else {
                        alert('Error approving payment: ' + (data.message || 'Unknown error'));
                    }
                } catch (error) {
                    alert('Error approving payment: ' + error.message);
                }
            }
        }

        function showRejectForm() {
            document.getElementById('approvalActions').style.display = 'none';
            document.getElementById('rejectForm').style.display = 'block';
        }

        function hideRejectForm() {
            document.getElementById('approvalActions').style.display = 'flex';
            document.getElementById('rejectForm').style.display = 'none';
            document.querySelector('.rejection-reason').value = '';
        }

        async function confirmRejection() {
            const reason = document.querySelector('.rejection-reason').value.trim();
            
            if (!reason) {
                alert('Please provide a reason for rejection.');
                return;
            }

            if (!currentPaymentId) return;

            if (confirm('Are you sure you want to reject this payment?')) {
                try {
                    const response = await fetch('/cashier/reject-payment', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({
                            paymentId: currentPaymentId,
                            action: 'reject',
                            reason: reason
                        })
                    });
                    const data = await response.json();
                    
                    if (data.success) {
                        alert('Payment rejected successfully!');
                        updatePaymentStatus(currentPaymentId, 'failed');
                        closeModal('paymentDetailsModal');
                        updateStatistics();
                        refreshPayments();
                    } else {
                        alert('Error rejecting payment: ' + (data.message || 'Unknown error'));
                    }
                } catch (error) {
                    alert('Error rejecting payment: ' + error.message);
                }
            }
        }

        function updatePaymentStatus(paymentId, newStatus) {
            const rows = document.querySelectorAll('#paymentsTableBody tr');
            rows.forEach(row => {
                const paymentIdCell = row.querySelector('.payment-id');
                if (paymentIdCell && paymentIdCell.textContent == paymentId) {
                    row.dataset.status = newStatus;
                    const statusBadge = row.querySelector('.status-badge');
                    if (statusBadge) {
                        statusBadge.className = `status-badge status-${newStatus}`;
                        statusBadge.textContent = newStatus === 'completed' ? 'Approved' : 
                                                 newStatus === 'failed' ? 'Rejected' : 
                                                 newStatus.charAt(0).toUpperCase() + newStatus.slice(1);
                    }
                    const actionButtons = row.querySelector('.action-buttons');
                    if (actionButtons && newStatus !== 'pending') {
                        actionButtons.innerHTML = `
                            <button class="action-btn" title="View Details" onclick="viewPaymentDetails('${paymentId}')">
                                <i class="fas fa-eye"></i>
                            </button>
                        `;
                    }
                }
            });
        }

        function closeModal(modalId) {
            const modal = document.getElementById(modalId);
            modal.style.display = 'none';
            currentPaymentId = null;
            document.getElementById('rejectForm').style.display = 'none';
            document.querySelector('.rejection-reason').value = '';
        }

        document.querySelectorAll('.modal').forEach(modal => {
            modal.addEventListener('click', function(event) {
                if (event.target === this) {
                    closeModal(this.id);
                }
            });
        });

        setInterval(function() {
            refreshPayments();
        }, 30000);

        async function refreshPayments() {
            try {
                const response = await fetch('/cashier/get-payments');
                const data = await response.json();
                
                if (data.success) {
                    updatePaymentsTable(data.payments);
                    updateStatistics();
                } else {
                    console.error('Error refreshing payments:', data.message);
                }
            } catch (error) {
                console.error('Error refreshing payments:', error);
            }
        }

        function updatePaymentsTable(payments) {
            const tbody = document.getElementById('paymentsTableBody');
            tbody.innerHTML = '';

            if (payments && payments.length > 0) {
                payments.forEach(payment => {
                    const row = document.createElement('tr');
                    row.dataset.status = payment.status.toLowerCase();
                    
                    row.innerHTML = `
                        <td class="payment-id">${payment.payment_id}</td>
                        <td class="cb-number">${payment.cb_number}</td>
                        <td>${payment.loan_id}</td>
                        <td>${payment.member_name}</td>
                        <td>${payment.loan_type}</td>
                        <td>${payment.payment_method}</td>
                        <td class="amount">₱${parseFloat(payment.amount_paid).toLocaleString('en-US', { minimumFractionDigits: 2 })}</td>
                        <td>${payment.payment_type}</td>
                        <td><span class="status-badge status-${payment.status.toLowerCase()}">${payment.status}</span></td>
                        <td>
                            <div class="action-buttons">
                                <button class="action-btn" title="View Details" onclick="viewPaymentDetails('${payment.payment_id}')">
                                    <i class="fas fa-eye"></i>
                                </button>
                                ${payment.status === 'Pending' ? `
                                    <button class="action-btn approve" title="Approve" onclick="approvePayment('${payment.payment_id}')">
                                        <i class="fas fa-check"></i>
                                    </button>
                                    <button class="action-btn reject" title="Reject" onclick="rejectPayment('${payment.payment_id}')">
                                        <i class="fas fa-times"></i>
                                    </button>
                                ` : ''}
                            </div>
                        </td>
                    `;
                    
                    tbody.appendChild(row);
                });
            } else {
                tbody.innerHTML = `
                    <tr>
                        <td colspan="10">
                            <div class="empty-state">
                                <i class="fas fa-inbox"></i>
                                <h3>No payments found</h3>
                                <p>No loan payments have been submitted for approval.</p>
                            </div>
                        </td>
                    </tr>
                `;
            }
        }
    </script>
</body>
</html>