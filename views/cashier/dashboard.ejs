<body>
    <% const currentPage = 'dashboard'; %>
    <%- include('../partials/cashiersidebar', { currentPage }) %>
    
    <div class="main-content">
        <div class="dashboard-header">
            <div>
                <h1 class="dashboard-title">Cashier Dashboard</h1>
                <p class="current-date" id="currentDate"></p>
            </div>
            <div class="user-info">
                <div class="user-avatar"><%= (user && user.first_name) ? user.first_name.charAt(0).toUpperCase() : 'U' %></div>
                <span><%= (user && user.first_name && user.last_name) ? `${user.first_name} ${user.last_name}` : 'Unknown User' %></span>
            </div>
        </div>
        
        <!-- Stats Cards -->
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-header">
                    <div>
                        <div class="stat-value">₱<%= (stats && stats.totalPayments) ? stats.totalPayments.toFixed(2) : '0.00' %></div>
                        <div class="stat-title">Today's Payments</div>
                    </div>
                    <div class="stat-icon primary">
                        <i class="fas fa-money-bill-wave"></i>
                    </div>
                </div>
            </div>
            
            <div class="stat-card">
                <div class="stat-header">
                    <div>
                        <div class="stat-value"><%= (stats && stats.transactionCount) || 0 %></div>
                        <div class="stat-title">Total Transactions</div>
                    </div>
                    <div class="stat-icon success">
                        <i class="fas fa-exchange-alt"></i>
                    </div>
                </div>
            </div>
            
            <div class="stat-card">
                <div class="stat-header">
                    <div>
                        <div class="stat-value"><%= (stats && stats.completedCount) || 0 %></div>
                        <div class="stat-title">Completed Payments</div>
                    </div>
                    <div class="stat-icon warning">
                        <i class="fas fa-check-circle"></i>
                    </div>
                </div>
            </div>
            
            <div class="stat-card">
                <div class="stat-header">
                    <div>
                        <div class="stat-value"><%= (stats && stats.overdueCount) || 0 %></div>
                        <div class="stat-title">Overdue Loans</div>
                    </div>
                    <div class="stat-icon danger">
                        <i class="fas fa-exclamation-circle"></i>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Two Column Layout -->
        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1.5rem;">
            <!-- Recent Activity -->
            <div class="recent-activity">
                <h2 class="section-title">
                    <i class="fas fa-history"></i>
                    Recent Payments
                </h2>
                <ul class="activity-list">
                    <% if (recentPayments && recentPayments.length > 0) { %>
                        <% recentPayments.forEach(payment => { %>
                            <li class="activity-item">
                                <div class="activity-icon">
                                    <% if (payment.status === 'Completed') { %>
                                        <i class="fas fa-check-circle" style="color: var(--success);"></i>
                                    <% } else if (payment.status === 'Failed') { %>
                                        <i class="fas fa-times-circle" style="color: var(--danger);"></i>
                                    <% } else { %>
                                        <i class="fas fa-money-bill-wave" style="color: var(--primary);"></i>
                                    <% } %>
                                </div>
                                <div class="activity-details">
                                    <div class="activity-title">
                                        <%= payment.status === 'Completed' ? 'Payment' : payment.status === 'Failed' ? 'Failed Payment' : 'Pending Payment' %> 
                                        #<%= payment.payment_id || 'N/A' %> by <%= payment.customer_name || 'Unknown Customer' %>
                                    </div>
                                    <div class="activity-time">
                                        <% if (payment.payment_date) { %>
                                            <%= new Date(payment.payment_date).toLocaleString('en-PH', { 
                                                year: 'numeric', 
                                                month: 'short', 
                                                day: 'numeric', 
                                                hour: '2-digit', 
                                                minute: '2-digit' 
                                            }) %>
                                        <% } else { %>
                                            Unknown time
                                        <% } %>
                                    </div>
                                </div>
                                <div class="activity-amount">
                                    <%= (payment.status === 'Failed' ? '-' : '') %>₱<%= (payment.amount || 0).toFixed(2) %>
                                </div>
                            </li>
                        <% }) %>
                    <% } else { %>
                        <li class="activity-item" style="justify-content: center; color: var(--gray);">
                            <div class="activity-details">
                                <div class="activity-title">No recent payments found</div>
                                <div class="activity-time">Start processing payments to see activity here</div>
                            </div>
                        </li>
                    <% } %>
                </ul>
            </div>
            
            <!-- Quick Actions -->
            <div class="quick-actions">
                <h2 class="section-title">
                    <i class="fas fa-bolt"></i>
                    Quick Actions
                </h2>
                <div class="actions-grid">
                    <a href="/cashier/loan-payments" class="action-btn">
                        <i class="fas fa-plus-circle"></i>
                        <span>New Payment</span>
                    </a>
                    <a href="/cashier/loan-payments" class="action-btn">
                        <i class="fas fa-undo"></i>
                        <span>Void Payment</span>
                    </a>
                    <a href="/cashier/payment-collections" class="action-btn">
                        <i class="fas fa-money-bill-alt"></i>
                        <span>Cash Drop</span>
                    </a>
                    <a href="/cashier/reports" class="action-btn">
                        <i class="fas fa-file-alt"></i>
                        <span>View Reports</span>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Display current date
        const options = { 
            weekday: 'long', 
            year: 'numeric', 
            month: 'long', 
            day: 'numeric' 
        };
        document.getElementById('currentDate').textContent = new Date().toLocaleDateString('en-PH', options);
        
        // Add active class to current nav item
        document.querySelectorAll('.nav-item').forEach(item => {
            if (item.textContent.trim().includes('Dashboard')) {
                item.classList.add('active');
            }
        });
    </script>
</body>
</html>
