<style>
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Poppins', sans-serif;
}

body {
    background-color: #f8fafc;
    color: #333;
    display: flex;
    min-height: 100vh;
}

.sidebar {
    width: 280px;
    background-color: #2c3e50;
    color: white;
    position: fixed;
    height: 100vh;
    z-index: 100;
    box-shadow: 2px 0 15px rgba(0, 0, 0, 0.1);
}

.main-content {
    margin-left: 280px;
    width: calc(100% - 280px);
    padding: 40px;
    background-color: #f8fafc;
}

.dashboard-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 40px;
}

.welcome-section h1 {
    font-size: 32px;
    font-weight: 700;
    color: #2c3e50;
    letter-spacing: -0.5px;
    margin-bottom: 8px;
}

.welcome-section p {
    color: #7f8c8d;
    font-size: 16px;
    font-weight: 400;
    line-height: 1.6;
}

.date-section {
    background: #fff;
    padding: 12px 20px;
    border-radius: 10px;
    box-shadow: 0 2px 15px rgba(0, 0, 0, 0.05);
    font-size: 15px;
    font-weight: 500;
    color: #555;
    display: flex;
    align-items: center;
    gap: 10px;
}

.date-section i {
    color: #3498db;
}

.loan-application-container {
    background: #fff;
    border-radius: 16px;
    padding: 60px;
    box-shadow: 0 5px 30px rgba(0, 0, 0, 0.05);
    margin-bottom: 40px;
    max-width: 1200px;
    margin: 0 auto;
}

.section-header {
    margin-bottom: 40px;
    border-bottom: 1px solid #ecf0f1;
    padding-bottom: 20px;
}

.section-title {
    font-size: 26px;
    font-weight: 700;
    color: #2c3e50;
    letter-spacing: -0.3px;
    position: relative;
    padding-bottom: 10px;
}

.section-title::after {
    content: '';
    position: absolute;
    bottom: -1px;
    left: 0;
    width: 60px;
    height: 3px;
    background: #3498db;
    border-radius: 3px;
}

.loan-options {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 30px;
    margin-top: 40px;
}

.loan-option-card {
    background: #fff;
    border-radius: 14px;
    padding: 40px;
    box-shadow: 0 5px 25px rgba(0, 0, 0, 0.06);
    transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
    border: 1px solid #e0e6ed;
    text-align: center;
    cursor: pointer;
    position: relative;
    overflow: hidden;
}

.loan-option-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 5px;
    background: linear-gradient(90deg, #3498db, #2ecc71);
}

.loan-option-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
    border-color: #3498db;
}

.loan-icon {
    font-size: 54px;
    margin-bottom: 25px;
    color: #3498db;
    background: rgba(52, 152, 219, 0.1);
    width: 90px;
    height: 90px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
}

.loan-option-title {
    font-size: 22px;
    font-weight: 700;
    margin-bottom: 20px;
    color: #2c3e50;
    letter-spacing: -0.2px;
}

.loan-option-description {
    font-size: 16px;
    color: #7f8c8d;
    margin-bottom: 30px;
    line-height: 1.7;
    font-weight: 400;
}

.select-button {
    background: linear-gradient(135deg, #3498db, #2ecc71);
    color: white;
    border: none;
    padding: 14px 30px;
    border-radius: 8px;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(52, 152, 219, 0.3);
    position: relative;
    overflow: hidden;
}

.select-button::after {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: 0.5s;
}

.select-button:hover {
    transform: translateY(-3px);
    box-shadow: 0 7px 20px rgba(52, 152, 219, 0.4);
}

.select-button:hover::after {
    left: 100%;
}

@media (max-width: 1200px) {
    .loan-application-container {
        padding: 40px;
    }
}

@media (max-width: 992px) {
    .main-content {
        padding: 30px;
    }
    
    .loan-options {
        grid-template-columns: 1fr;
    }
    
    .loan-option-card {
        padding: 30px;
    }
}

@media (max-width: 768px) {
    .sidebar {
        width: 100%;
        position: relative;
        height: auto;
    }
    
    .main-content {
        margin-left: 0;
        width: 100%;
        padding: 25px;
    }
    
    .dashboard-header {
        flex-direction: column;
        align-items: flex-start;
        gap: 20px;
    }
    
    .welcome-section h1 {
        font-size: 26px;
    }
    
    .section-title {
        font-size: 22px;
    }
    
    .loan-application-container {
        padding: 30px;
    }
}

@media (max-width: 576px) {
    .loan-option-card {
        padding: 25px 20px;
    }
    
    .select-button {
        padding: 12px 25px;
    }
    
    .loan-icon {
        width: 70px;
        height: 70px;
        font-size: 40px;
    }
}
</style>

<body>
    <%- include('../partials/membersidebar') %>
    
    <div class="main-content">
        <div class="dashboard-header">
            <div class="welcome-section">
                <h1>Loan Application</h1>
                <p>Select your preferred loan type to begin your application</p>
            </div>
            <div class="date-section">
                <i class="fas fa-calendar-alt"></i>
                <script>
                    const options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
                    document.write(new Date().toLocaleDateString('en-US', options));
                </script>
            </div>
        </div>
        
        <div class="loan-application-container">
            <div class="section-header">
                <div class="section-title">Available Loan Programs</div>
            </div>
            
            <div class="loan-options">
                <!-- Salary Loan Option -->
                <div class="loan-option-card" id="salaryLoanBtn">
                    <div class="loan-icon">
                        <i class="fa-solid fa-money-bill-wave"></i>
                    </div>
                    <h3 class="loan-option-title">Salary/Bonuses Loan</h3>
                    <p class="loan-option-description">
                        Convenient short-term financing automatically deducted from your salary or bonuses with our most competitive interest rates and flexible repayment terms.
                    </p>
                    <button class="select-button">Apply Now</button>
                </div>
                
                <!-- Regular/Agricultural Loan Option -->
                <div class="loan-option-card" id="regularLoanBtn">
                    <div class="loan-icon">
                        <i class="fa-solid fa-tractor"></i>
                    </div>
                    <h3 class="loan-option-title">Regular/Agricultural Loan</h3>
                    <p class="loan-option-description">
                        Comprehensive financing solutions for agricultural ventures or general needs, featuring customizable loan amounts, flexible payment schedules, and special rates for farmers.
                    </p>
                    <button class="select-button">Apply Now</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.getElementById("regularLoanBtn").addEventListener("click", function() {
            window.location.href = "/member/loan-regular";
        });

        document.getElementById("salaryLoanBtn").addEventListener("click", function() {
            window.location.href = "/member/loan-salary";
        });
    </script>
</body>