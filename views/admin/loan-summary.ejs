<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - BOCOFAMCO</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- DataTables CSS -->
    <link href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" rel="stylesheet">
    <style>
        body {
            padding-top: 20px;
        }
        .main-content {
            margin-left: 250px; /* Adjust based on adminsidebar width */
            padding: 20px;
        }
        .summary-card {
            border-left: 4px solid #0d6efd;
        }
        .summary-card.salary {
            border-left-color: #198754;
        }
        .summary-card.agricultural {
            border-left-color: #6f42c1;
        }
        .summary-total {
            font-weight: bold;
            background-color: #f8f9fa !important;
        }
        @media print {
            .btn, .no-print {
                display: none !important;
            }
            .card {
                border: 1px solid #000 !important;
            }
        }
    </style>
</head>
<body>
    <%- include('../partials/adminsidebar') %>
    
    <div class="main-content">
        <div class="container-fluid">
            <h1 class="mt-4">Loan Summary</h1>
            
            <div class="row mb-4 no-print">
                <div class="col-md-12">
                    <a href="/admin/reports" class="btn btn-primary">Back to Reports</a>
                    <button class="btn btn-secondary float-end" onclick="window.print()">Print Summary</button>
                </div>
            </div>

            <% if (summary) { %>
                <!-- Salary Loan Summary -->
                <div class="row mb-4">
                    <div class="col-md-12">
                        <div class="card summary-card salary">
                            <div class="card-header bg-success text-white">
                                <h5 class="mb-0">Salary/Bonus Loan Summary</h5>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-bordered" id="salarySummaryTable">
                                        <thead>
                                            <tr>
                                                <th>Loan Type</th>
                                                <th>Application Type</th>
                                                <th>Total Count</th>
                                                <th>Total Amount</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% 
                                                let salaryTotalCount = 0;
                                                let salaryTotalAmount = 0;
                                            %>
                                            <% if (summary.salary.length > 0) { %>
                                                <% summary.salary.forEach(item => { %>
                                                    <tr>
                                                        <td><%= item.loan_type || 'N/A' %></td>
                                                        <td><%= item.loan_application_type || 'N/A' %></td>
                                                        <td><%= item.total_count || 0 %></td>
                                                        <td>₱<%= Number(item.total_amount || 0).toLocaleString('en-PH') %></td>
                                                    </tr>
                                                    <%
                                                        salaryTotalCount += parseInt(item.total_count || 0);
                                                        salaryTotalAmount += parseFloat(item.total_amount || 0);
                                                    %>
                                                <% }) %>
                                                <tr class="summary-total">
                                                    <td colspan="2"><strong>Total</strong></td>
                                                    <td><strong><%= salaryTotalCount %></strong></td>
                                                    <td><strong>₱<%= Number(salaryTotalAmount).toLocaleString('en-PH') %></strong></td>
                                                </tr>
                                            <% } else { %>
                                                <tr>
                                                    <td colspan="4" class="text-center">No salary loan data available</td>
                                                </tr>
                                            <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Agricultural Loan Summary -->
                <div class="row">
                    <div class="col-md-12">
                        <div class="card summary-card agricultural">
                            <div class="card-header bg-primary text-white">
                                <h5 class="mb-0">Agricultural Loan Summary</h5>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-bordered" id="agriculturalSummaryTable">
                                        <thead>
                                            <tr>
                                                <th>Application Type</th>
                                                <th>Total Count</th>
                                                <th>Total Amount</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% 
                                                let agriculturalTotalCount = 0;
                                                let agriculturalTotalAmount = 0;
                                            %>
                                            <% if (summary.agricultural.length > 0) { %>
                                                <% summary.agricultural.forEach(item => { %>
                                                    <tr>
                                                        <td><%= item.loan_application_type || 'N/A' %></td>
                                                        <td><%= item.total_count || 0 %></td>
                                                        <td>₱<%= Number(item.total_amount || 0).toLocaleString('en-PH') %></td>
                                                    </tr>
                                                    <%
                                                        agriculturalTotalCount += parseInt(item.total_count || 0);
                                                        agriculturalTotalAmount += parseFloat(item.total_amount || 0);
                                                    %>
                                                <% }) %>
                                                <tr class="summary-total">
                                                    <td><strong>Total</strong></td>
                                                    <td><strong><%= agriculturalTotalCount %></strong></td>
                                                    <td><strong>₱<%= Number(agriculturalTotalAmount).toLocaleString('en-PH') %></strong></td>
                                                </tr>
                                            <% } else { %>
                                                <tr>
                                                    <td colspan="3" class="text-center">No agricultural loan data available</td>
                                                </tr>
                                            <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Grand Total -->
                <div class="row mt-4">
                    <div class="col-md-12">
                        <div class="card bg-light">
                            <div class="card-header">
                                <h5 class="mb-0">Grand Total</h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <p><strong>Total Loans:</strong> <%= salaryTotalCount + agriculturalTotalCount %></p>
                                        <p><strong>Total Amount:</strong> ₱<%= Number(salaryTotalAmount + agriculturalTotalAmount).toLocaleString('en-PH') %></p>
                                    </div>
                                    <div class="col-md-6">
                                        <p><strong>Salary Loans:</strong> <%= salaryTotalCount %> (₱<%= Number(salaryTotalAmount).toLocaleString('en-PH') %>)</p>
                                        <p><strong>Agricultural Loans:</strong> <%= agriculturalTotalCount %> (₱<%= Number(agriculturalTotalAmount).toLocaleString('en-PH') %>)</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <% } %>

            <% if (error) { %>
                <div class="alert alert-danger" role="alert">
                    <%= error %>
                </div>
            <% } %>
        </div>
    </div>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- DataTables JS -->
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script>
        // Initialize DataTables if available
        window.addEventListener('DOMContentLoaded', function() {
            if (typeof $.fn.DataTable !== 'undefined') {
                if (document.getElementById('salarySummaryTable')) {
                    $('#salarySummaryTable').DataTable({
                        ordering: false,
                        searching: false,
                        paging: false,
                        info: false
                    });
                }
                
                if (document.getElementById('agriculturalSummaryTable')) {
                    $('#agriculturalSummaryTable').DataTable({
                        ordering: false,
                        searching: false,
                        paging: false,
                        info: false
                    });
                }
            }
            
            // Add print date to the document when printing
            const originalPrint = window.print;
            window.print = function() {
                const printDate = document.createElement('div');
                printDate.className = 'print-date';
                printDate.style.textAlign = 'center';
                printDate.style.marginBottom = '20px';
                printDate.innerHTML = '<p>Generated on: ' + new Date().toLocaleString() + '</p>';
                
                document.body.appendChild(printDate);
                originalPrint();
                document.body.removeChild(printDate);
            };
        });
    </script>
</body>
</html>